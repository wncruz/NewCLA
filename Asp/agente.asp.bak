<%
'•IMPLEMENT SOFT - IMPLEMENTAÇÕES E SOLUÇÕES EM INFORMÁTICA
'	- Sistema			: CLA
'	- Arquivo			: Agente.asp
'	- Responsável		: Vital
'	- Descrição			: Cadastra/Altera Agente
%>
<!--#include file="../inc/data.asp"-->
<%
Dim strSigla
Dim strDesc 
Dim dblID

dblID = Request.QueryString("ID")
if Trim(dblID) = "" then
	 dblID  = Request.Form("hdnID")
End if	 

If Request.Form("btnGravar")="Gravar" then

	If dblID="" then
		Vetor_Campos(1)="adInteger,2,adParamInput,"
	Else
		Vetor_Campos(1)="adInteger,2,adParamInput,"& dblID
	End if
	Vetor_Campos(2)="adWChar,3,adParamInput,"& ucase(request("txtSigla"))
	Vetor_Campos(3)="adWChar,50,adParamInput,"& ucase(request("txtDesc"))
	Vetor_Campos(4)="adInteger,2,adParamOutput,0"  

	Call APENDA_PARAM("CLA_sp_ins_agente",4,Vetor_Campos)
	ObjCmd.Execute'pega dbaction
	DBAction = ObjCmd.Parameters("RET").value

End if

if dblID<> "" then
	set objRS = db.execute("CLA_sp_sel_agente " & dblID)
	if Not objRS.Eof And Not objRS.Bof then
		strSigla = TratarAspasHtml(objRS("Age_Sigla"))
		strDesc =  TratarAspasHtml(objRS("Age_Desc"))
	End if
Else
	strSigla = TratarAspasHtml(Request.Form("txtSigla"))
	strDesc =  TratarAspasHtml(Request.Form("txtDesc"))
End if
%>
<!--#include file="../inc/header.asp"-->
<form action="agente.asp" method="post" onSubmit="return checa(this)" name=Form1 >
<input type=hidden name=hdnID value="<%=dblID%>" >

<SCRIPT LANGUAGE="JavaScript">
function checa(f) {

	if (!ValidarCampos(f.txtSigla,"A Sigla ")) return false;
	if (!ValidarCampos(f.txtDesc,"Descrição")) return false;

	return true;
}
		</script>
<tr><td >
<table border=0 cellspacing="1" cellpadding="0" width="760">
<tr>
<th colspan=2><p align="center">Cadastro de Agente</p></td>
</tr>
<tr class=clsSilver>
	<td>
		<font class="clsObrig">::</font>Sigla
	</td>
	<td>
		<input type="text" class="text" name="txtSigla" value="<%=strSigla%>" maxlength="3" size="3" onKeyUp="ValidarTipo(this,1)">
	</td>
</tr>
<tr class=clsSilver>
	<td>
		<font class="clsObrig">:: </font>Descrição
	</td>
	<td>
		<input type="text" class="text" name="txtDesc" value="<%=strDesc%>" maxlength="30" size="60">
	</td>
</tr>
</table>
</tr>
<tr>
<td align=center>
<table>
	<tr>
		<td colspan=2 align="center">
			<input type="submit" class="button" name="btnGravar" value="Gravar" accesskey="I" onmouseover="showtip(this,event,'Incluir (Alt+I)');">&nbsp;
			<input type="button" class="button" name="btnLimpar" value="Limpar" onclick="document.forms[0].hdnID.value='';LimparForm();setarFocus('txtSigla')" accesskey="L" onmouseover="showtip(this,event,'Limpar (Alt+L)');">&nbsp;
			<input type="button" class="button" name="Voltar" value="Voltar" onClick="javascript:window.location.replace('agente_main.asp')" accesskey="B" onmouseover="showtip(this,event,'Voltar (Alt+B)');">
			<input type="button" class="button" name="btnSair" value=" Sair " onClick="javascript:window.location.replace('main.asp')" style="width:100px" accesskey="X" onmouseover="showtip(this,event,'Sair (Alt+X)');">			
		</td>
	</tr>
</table>
</td>
</tr>
<table width="760">
	<tr>
		<td>
			<font class="clsObrig">:: </font> Campos de preenchimento obrigatório.
		</td>
	</tr>
</table>
</body>
<SCRIPT LANGUAGE=javascript>
<!--
setarFocus('txtSigla')
//-->
</SCRIPT>
</html>
<%DesconectarCla()%>
